@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid pb-5">

    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ImageSliderProductDetailComponentPartial", new { id = ViewData["pId"] })

        @await Component.InvokeAsync("_FeatureProductDetailComponentPartial", new { id = ViewData["pId"] })
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Açıklama</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Özellikler</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("_DescriptionProductDetailComponentPartial", new { id = ViewData["pId"] })

                    @await Component.InvokeAsync("_InformationProductDetailComponentPartial", new { id = ViewData["pId"] })

                    @await Component.InvokeAsync("_ReviewsProductDetailComponentPartial", new { id = ViewData["pId"] })

                </div>
            </div>
        </div>
    </div>
</div>



