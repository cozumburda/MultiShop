@model List<ResultCommentDto>
<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">@Model.Count Adet Yorum Bulunmaktadır.</h4>
            @foreach (var item in Model)
            {
                <div class="media mb-4">
                    <img src="@item.ImageUrl" alt="Image" class="img-fluid rounded-circle mr-3 mt-1" style="height: 45px;">
                    <div class="media-body">
                        <h6>@item.NameSurname<small> - <i>@item.CreatedDate.ToString("dd-MMM-yyyy")</i></small></h6>
                        <div class="text-primary mb-2">
                            @for (int i = 0; i < 5; i++)
                            {
                                if (i < item.Rating)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                else
                                {
                                    <i class="far fa-star"></i>
                                }
                            }
                        </div>
                        <p>@item.CommentDetail</p>
                    </div>
                </div>
            }
        </div>
        @await Component.InvokeAsync("_ReviewsFormProductDetailComponentPartial")
    </div>
</div>