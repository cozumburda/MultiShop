@model CreateCommentDto

<div class="col-md-6">
    <h4 class="mb-4">Bir Yorum Bırakın</h4>
    <small>Yorumunuzun yayınlanması için geçerli bir email adresi giriniz *</small>
    <div class="d-flex my-3">
        <p class="mb-0 mr-2">Puanınız * :</p>
        <div class="text-primary">
            @for (int i = 0; i < 5; i++)
            {
                <i class="far fa-star star-icon" id="@i" onclick="toggleStar(this,@i)"></i>
            }
        </div>
    </div>
    <form method="post" action="/ProductList/AddComment/">
        <input type="hidden" asp-for="ProductId" value="@ViewData["pId"]" />
        <input type="hidden" asp-for="Rating" id="rating" class="form-control" />
        <div class="form-group">
            <label for="name">Adınız Soyadınız *</label>
            <input type="text" asp-for="NameSurname" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="email">Email Adresiniz *</label>
            <input type="email" asp-for="Email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz *</label>
            <textarea id="message" asp-for="CommentDetail" cols="30" rows="5" class="form-control"></textarea>
        </div>
        <div class="form-group mb-0">
            <input type="submit" value="Yorumu Gönder" class="btn btn-primary px-3">
        </div>
    </form>
</div>
<script>
    function toggleStar(star, id) {
        var stars = document.getElementsByClassName('star-icon');
        for (var i = 0; i < stars.length; i++) {
            if (i <= id) {
                stars[i].classList.remove('far');
                stars[i].classList.add('fas');
            }
            else {
                stars[i].classList.remove('fas');
                stars[i].classList.add('far');
            }
        }
        document.getElementById('rating').value = id + 1;
    }
</script>