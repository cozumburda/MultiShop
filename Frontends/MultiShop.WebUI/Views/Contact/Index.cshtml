@model CreateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

@if (TempData["contactInfo"] != null)
{
    <div class="p-3 text-center">
        <h3 class="text-danger">@TempData["contactInfo"]</h3>
        <h4>Bize gönderdiğiniz Bilgiler:</h4>
        <p>Adınız Soyadınız : @TempData["contact1"]</p>
        <p>e-Mail Adresiniz : @TempData["contact2"]</p>
        <p>Konu : @TempData["contact3"]</p>
        <p>Mesajınız : @TempData["contact4"]</p>
        <p>Tarih / Saat : @TempData["contact5"]</p>
    </div>
}

<!-- Contact Start -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Bize Yazın</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form method="post">
                    <div class="control-group">
                        <input type="text" class="form-control" asp-for="NameSurname" id="name" placeholder="Adınız Soyadınız"
                               required="required" data-validation-required-message="Adınız Soyadınız" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Mail Adresiniz"
                               required="required" data-validation-required-message="E-Mail" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="text" class="form-control" asp-for="Subject" id="subject" placeholder="Konu"
                               required="required" data-validation-required-message="Konu" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <textarea class="form-control" rows="8" asp-for="Message" id="message" placeholder="Mesajınız"
                                  required="required"
                                  data-validation-required-message="Mesajınız"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">
                            Mesajı Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>
        @await Component.InvokeAsync("_ContactDetailComponentPartial")

    </div>
</div>
<!-- Contact End -->
