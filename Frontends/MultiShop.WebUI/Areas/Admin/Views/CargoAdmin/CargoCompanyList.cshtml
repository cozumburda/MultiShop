@model List<ResultCargoCompanyDto>
@{
    ViewData["Title"] = "CargoCompanyList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="col-md-12">
        <div class="chart-box">
            @*  <h4>Kategori Listesi</h4>
            <p>Kategori ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz</p> *@
            <br />
            <div class="bs-example" data-example-id="bordered-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Şirket Adı</th>                            
                            <th class="text-center">Sil</th>
                            <th class="text-center">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.CargoCompanyName</td>
                                <td class="text-center"><a href="/Admin/CargoAdmin/DeleteCargoCompany/@item.CargoCompanyId" class="btn btn-danger btn-sm">Sil</a></td>
                                <td class="text-center"><a href="/Admin/CargoAdmin/UpdateCargoCompany/@item.CargoCompanyId" class="btn btn-warning btn-sm">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="/Admin/CargoAdmin/CreateCargoCompany/" class="btn btn-primary btn-sm">Yeni Kargo Şirketi Ekle</a>
        </div>
    </div>
</section>
