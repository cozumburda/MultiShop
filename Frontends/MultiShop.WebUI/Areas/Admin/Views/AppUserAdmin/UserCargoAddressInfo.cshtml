@model GetCargoCustumerAddressByIdDto
@{
    ViewData["Title"] = "UserCargoAddressInfo";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row col-md-6">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Adresi</h4>
                <div class="row">
                    <div class="col-md-6">
                        <fieldset class="form-group">
                            <label>İsim</label>
                            <input class="form-control" asp-for="name" readonly type="text">
                        </fieldset>
                    </div>
                    <div class="col-md-6">
                        <fieldset class="form-group">
                            <label>Soyisim</label>
                            <input class="form-control" asp-for="surName" readonly type="text">
                        </fieldset>
                    </div>
                    <div class="col-md-6">
                        <fieldset class="form-group">
                            <label>E-Mail</label>
                            <input class="form-control" asp-for="email" readonly type="email">
                        </fieldset>
                    </div>
                    <div class="col-md-6">
                        <fieldset class="form-group">
                            <label>Telefon</label>
                            <input class="form-control" asp-for="phone" readonly type="text">
                        </fieldset>
                    </div>
                    <div class="col-md-6">
                        <fieldset class="form-group">
                            <label>İl</label>
                            <input class="form-control" asp-for="city" readonly type="text">
                        </fieldset>
                    </div>
                    <div class="col-md-6">
                        <fieldset class="form-group">
                            <label>İlçe</label>
                            <input class="form-control" asp-for="district" readonly type="text">
                        </fieldset>
                    </div>
                    <div class="col-md-12">
                        <fieldset class="form-group">
                            <label>Adres</label>
                            <textarea class="form-control" asp-for="address" readonly rows="12"></textarea>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row col-md-6">@await Component.InvokeAsync("_OrderDefaultAddressComponentPartial")</div>
</section>


