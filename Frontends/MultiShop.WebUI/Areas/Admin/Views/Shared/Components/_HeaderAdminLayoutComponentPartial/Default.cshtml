
<header class="main-header dark-bg">

    <!-- Logo -->
    <a href="#" class="logo dark-bg">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><img src="~/images/logos/MULTISHOPPNG.png" style="height:44px" alt="multishop"></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><img src="~/images/logos/mulhtishop1.jpg" style="height:44px" alt="multishop"></span>
    </a>

    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button"> <span class="sr-only">Menüyü Kapat</span> </a>
        <div class="pull-left search-box">
            <form action="#" method="get" class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Arama...">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i> </button>
                    </span>
                </div>
            </form>
            <!-- search form -->
        </div>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown messages-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="uacomment">
                        <i class="icon-chat"> <strong id="commentcount"></strong></i>
                        <div class="notify" style="margin-left:30px"> <span class="heartbit"></span> <span class="point"></span> </div>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="header"> <strong id="commentcount2"></strong> adet onaysız yorum var</li>
                        <li>
                            <ul class="menu" id="getuacomment">
                                @await Component.InvokeAsync("_HeaderAdminLayoutCommentComponentPartial")
                                
                            </ul>
                        </li>
                        <li class="footer"><a href="#">Tüm Yorumlar</a></li>
                    </ul>
                </li>
                <!-- messages-menu -->
                <!-- Notifications Menu -->
                <li class="dropdown messages-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="urmessage">
                        <i class="icon-envelope"> <strong id="messagecount"></strong></i>
                        <div class="notify" style="margin-left:30px"> <span class="heartbit"></span> <span class="point"></span> </div>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="header"> <strong id="messagecount2"></strong> adet okunmamış mesajınız var</li>
                        <li>
                            <ul class="menu" id="geturmessage">
                                @await Component.InvokeAsync("_HeaderAdminLayoutMessageComponentPartial")
                            </ul>
                        </li>
                        <li class="footer"><a href="#">Tüm Mesajlar</a></li>
                    </ul>
                </li>
                <!-- Tasks Menu -->
                <!-- User Account Menu -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <img src="~/images/logos/manlogo.jpg" class="user-image" alt="User Image"> <span class="hidden-xs">Admin 01</span> </a>
                    <ul class="dropdown-menu">
                        <li class="user-header">
                            <div class="pull-left user-img"><img src="~/images/logos/manlogo.jpg" class="img-responsive" alt="User"></div>
                            <p class="text-left">Admin <small>multishop@gmail.com</small> </p>
                            <div class="view-link text-left"><a href="#">Profili Gör</a> </div>
                        </li>
                        <li><a href="#"><i class="icon-profile-male"></i> Profilim</a></li>
                        <li><a href="#"><i class="icon-wallet"></i> Kasa</a></li>
                        <li><a href="#"><i class="icon-envelope"></i> Gelen Kutusu</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#"><i class="icon-gears"></i> Hesap Ayarları</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#"><i class="fa fa-power-off"></i> Çıkış Yap</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/js/refreshunreadedmessages.js"></script>
<script src="~/js/refreshunapprovedcomments.js"></script>