@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="col-md-12">
        <div class="chart-box">
            <br />
            <div class="bs-example" data-example-id="bordered-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Öne Çıkan Başlığı</th>
                            <th class="text-center">İkon</th>
                            <th class="text-center">Sil</th>
                            <th class="text-center">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Title</td>
                                <td class="text-center">@item.Icon</td>
                                <td class="text-center"><a href="/Admin/FeatureAdmin/DeleteFeature/@item.FeatureID" class="btn btn-danger btn-sm">Sil</a></td>
                                <td class="text-center"><a href="/Admin/FeatureAdmin/UpdateFeature/@item.FeatureID" class="btn btn-warning btn-sm">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="/Admin/FeatureAdmin/CreateFeature/" class="btn btn-primary btn-sm">Yeni Öne Çıkan Ekle</a>
        </div>
    </div>
</section>

