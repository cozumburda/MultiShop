@model UpdateCommentDto

@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Güncelleme Sayfası</h4>
                <br />
                <form method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="UserCommentId">
                        <input type="hidden" asp-for="Status">
                        <input type="hidden" asp-for="ProductId">
                        <label>Ürün Adı</label>
                        <input type="text" value="@ViewBag.pName" class="form-control" disabled>
                        <br />
                        <label>Kullanıcı Adı Soyadı</label>
                        <input type="text" asp-for="NameSurname" class="form-control">
                        <br />
                        <label>Kullanıcı Email</label>
                        <input type="text" asp-for="Email" class="form-control">
                        <br />                        
                        <label>Kullanıcı Puanı</label>
                        <input type="number" asp-for="Rating" class="form-control">
                        <br />
                        <label>Yorum Tarihi</label>
                        <input type="date" asp-for="CreatedDate" class="form-control">
                        <br />
                        <label>Kullanıcı Görsel</label>
                        <input type="text" asp-for="ImageUrl" class="form-control">
                        <br />
                        <label>Yorum</label>
                        <textarea asp-for="CommentDetail" rows="3" class="form-control"></textarea>
                        <br />
                    </div>
                    <button type="submit" class="btn btn-success">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</section>