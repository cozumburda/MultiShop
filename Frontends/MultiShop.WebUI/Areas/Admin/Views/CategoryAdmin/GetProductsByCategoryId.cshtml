@model List<ResultProductWithCategoryDto>

@{
    ViewData["Title"] = "GetProductsByCategoryId";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="col-md-12">
        <div class="chart-box">
            @* <h4>Ürün Listesi</h4>
            <p>Ürün ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz</p> *@
            <br />
            <div class="bs-example" data-example-id="bordered-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Fiyatı</th>
                            <th>Görsel</th>
                            <th class="text-center">Sil</th>
                            <th class="text-center">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.ProductName</td>
                                <td >@item.ProductPrice</td>
                                <td class="text-center"><img src="@item.ProductImageUrl" style="height:60px" class="img-circle" /></td>
                                <td class="text-center"><a href="#" class="btn btn-danger btn-sm">Sil</a></td>
                                <td class="text-center"><a href="#" class="btn btn-warning btn-sm">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
