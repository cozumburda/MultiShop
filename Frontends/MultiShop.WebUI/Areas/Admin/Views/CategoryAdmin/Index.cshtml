@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
    
}

<section class="content container-fluid">
    <div class="col-md-12">
        <div class="chart-box">
            @*  <h4>Kategori Listesi</h4>
            <p>Kategori ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz</p> *@
            <br />
            <div class="bs-example" data-example-id="bordered-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Görsel</th>
                            <th class="text-center">Kategoriye Ait Ürünler</th>
                            <th class="text-center">Sil</th>
                            <th class="text-center">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.CategoryName</td>
                                <td class="text-center"><img src="@item.ImageUrl" style="height:60px" class="img-circle" /></td>
                                <td class="text-center"><a href="/Admin/CategoryAdmin/GetProductsByCategoryId/@item.CategoryID" class="btn btn-primary btn-sm">Kategoriye Ait Ürünler</a></td>
                                <td class="text-center"><a href="/Admin/CategoryAdmin/DeleteCategory/@item.CategoryID" class="btn btn-danger btn-sm">Sil</a></td>
                                <td class="text-center"><a href="/Admin/CategoryAdmin/UpdateCategory/@item.CategoryID" class="btn btn-warning btn-sm">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>              
            </div>
            <a href="/Admin/CategoryAdmin/CreateCategory/" class="btn btn-primary btn-sm">Yeni Kategori Ekle</a>
        </div>
    </div>
</section>