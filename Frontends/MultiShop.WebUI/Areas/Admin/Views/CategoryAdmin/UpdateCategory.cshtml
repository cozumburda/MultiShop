@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Güncelleme Sayfası</h4>
                <br />
                <form method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="CategoryID">
                        <label for="exampleInputEmail1">Kategori Adı</label>
                        <input type="text" asp-for="CategoryName" class="form-control" id="exampleInputEmail1" placeholder="Kategori Adı">
                        <br />
                        <label for="exampleInputEmail1">Görsel Linki</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" id="exampleInputEmail1" placeholder="Görsel Linki">
                    </div>
                    <button type="submit" class="btn btn-success">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</section>

