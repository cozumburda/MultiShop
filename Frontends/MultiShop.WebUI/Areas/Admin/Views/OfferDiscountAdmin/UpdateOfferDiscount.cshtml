@model UpdateOfferDiscountDto

@{
    ViewData["Title"] = "UpdateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>İndirim Teklifi Güncelleme Sayfası</h4>
                <br />
                <form method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="OfferDiscountId" />
                        <label for="exampleInputEmail1">İndirim Teklifi Başlığı</label>
                        <input type="text" asp-for="Title" class="form-control" id="exampleInputEmail1" placeholder="Teklif Başlığı">
                        <br />
                        <label for="exampleInputEmail1">İndirim Teklifi Alt Başlığı</label>
                        <input type="text" asp-for="SubTitle" class="form-control" id="exampleInputEmail1" placeholder="Teklif Alt Başlığı">
                        <br />
                        <label for="exampleInputEmail1">İndirim Teklifi Görseli</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" id="exampleInputEmail1" placeholder="Görsel">
                        <br />
                        <label for="exampleInputEmail1">Buton Metni</label>
                        <input type="text" asp-for="ButtonTitle" class="form-control" id="exampleInputEmail1" placeholder="Buton Metni">
                        <br />
                    </div>
                    <button type="submit" class="btn btn-success">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</section>


