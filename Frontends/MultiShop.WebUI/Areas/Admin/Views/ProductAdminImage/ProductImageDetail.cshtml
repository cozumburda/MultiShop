@model List<UpdateProductImageDto>

@{
    ViewData["Title"] = "ProductImageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="col-md-12">
        <div class="chart-box">
            <h4>İşlem yapılan Ürün : @ViewBag.pName</h4>
            @* <p>Ürün ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz</p> *@
            <br />
            <div class="bs-example" data-example-id="bordered-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th class="text-center">Görsel</th>
                            <th class="text-center">Sil</th>
                            <th class="text-center">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td class="text-center"><img src="@item.ProductImage1" class="rounded-2" style="height:100px" /></td>
                                <td class="text-center"><a href="/Admin/ProductAdminImage/DeleteProductImage/@item.ProductImageID" class="btn btn-danger btn-sm">Sil</a></td>
                                <td class="text-center"><a href="/Admin/ProductAdminImage/UpdateProductImage/@item.ProductImageID" class="btn btn-warning btn-sm">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="/Admin/ProductAdminImage/CreateProductImage/@ViewBag.pId" class="btn btn-primary btn-sm">Yeni Görsel Ekle</a>
        </div>
    </div>
</section>

