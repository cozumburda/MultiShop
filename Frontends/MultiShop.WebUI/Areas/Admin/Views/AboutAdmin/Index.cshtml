@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="col-md-12">
        <div class="chart-box">
            @*  <h4>Kategori Listesi</h4>
            <p>Kategori ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz</p> *@
            <br />
            <div class="bs-example" data-example-id="bordered-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Açıklama</th>
                            <th>Adres</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th class="text-center">Sil</th>
                            <th class="text-center">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Description</td>
                                <td>@item.Address</td>
                                <td>@item.Mail</td>
                                <td>@item.Phone</td>
                                <td class="text-center"><a href="/Admin/AboutAdmin/DeleteAbout/@item.AboutId" class="btn btn-danger btn-sm">Sil</a></td>
                                <td class="text-center"><a href="/Admin/AboutAdmin/UpdateAbout/@item.AboutId" class="btn btn-warning btn-sm">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.Count >= 1)
            {
                <a href="" class="btn btn-danger btn-sm disabled">Hakkımızda içeriği birden fazla olamaz</a>
            }
            else
            {
                <a href="/Admin/AboutAdmin/CreateAbout/" class="btn btn-primary btn-sm">Yeni Hakkımızda Ekle</a>
            }
        </div>
    </div>
</section>
