@model List<ResultFeatureSliderDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
    string lnk = "";
    string sta = "";
    string staChange = "";
    string color1 = "";
    string color2 = "";
}


<section class="content container-fluid">
    <div class="col-md-12">
        <div class="chart-box">
            <br />
            <div class="bs-example" data-example-id="bordered-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Görsel Başlığı</th>
                            <th class="text-center">Görsel</th>
                            <th class="text-center">Sil</th>
                            <th class="text-center">Güncelle</th>
                            <th class="text-center text-wrap">Durum / Durum Değiştir</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            switch (item.Status)
                            {
                                case true:
                                    sta = "Aktif";
                                    color1 = "success";
                                    staChange = "Pasif Yap";
                                    color2 = "danger";
                                    lnk = "/Admin/FeatureSliderAdmin/ChangeFeatureSliderStatusToFalse";
                                    break;
                                case false:
                                    sta = "Pasif";
                                    color1 = "danger";
                                    staChange = "Aktif Yap";
                                    color2 = "success";
                                    lnk = "/Admin/FeatureSliderAdmin/ChangeFeatureSliderStatusToTrue";
                                    break;
                            }

                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Title</td>
                                <td class="text-center"><img src="@item.ImageUrl" style="height:60px" class="img-circle" /></td>
                                <td class="text-center"><a href="/Admin/FeatureSliderAdmin/DeleteFeatureSlider/@item.FeatureSliderId" class="btn btn-danger btn-sm">Sil</a></td>
                                <td class="text-center"><a href="/Admin/FeatureSliderAdmin/UpdateFeatureSlider/@item.FeatureSliderId" class="btn btn-warning btn-sm">Güncelle</a></td>
                                <td class="text-center">
                                    <span class="btn btn-@color1 p-3 rounded-3">@sta</span>
                                    <a href="@lnk/@item.FeatureSliderId" class="btn btn-@color2">@staChange</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="/Admin/FeatureSliderAdmin/CreateFeatureSlider/" class="btn btn-primary btn-sm">Yeni Slider Görsel Ekle</a>
        </div>
    </div>
</section>
