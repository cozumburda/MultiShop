@model List<ResultProductWithCategoryDto>

@{
    ViewData["Title"] = "ProductListWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<section class="content container-fluid">
    <div class="col-md-12">
        <div class="chart-box">
            @* <h4>Ürün Listesi</h4>
            <p>Ürün ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz</p> *@
            <br />
            <div class="bs-example" data-example-id="bordered-table">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Fiyatı</th>
                            <th>Kategori</th>
                            <th class="text-center">Sil</th>
                            <th class="text-center">Güncelle</th>
                            <th class="text-center">Ürün Görselleri</th>
                            <th class="text-center">Açıklama ve Bilgi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.ProductName</td>
                                <td>@item.ProductPrice.ToString("#,###")</td>
                                <td>@item.Category.CategoryName</td>
                                <td class="text-center"><a href="/Admin/ProductAdmin/DeleteProduct/@item.ProductID" class="btn btn-danger btn-sm">Sil</a></td>
                                <td class="text-center"><a href="/Admin/ProductAdmin/UpdateProduct/@item.ProductID" class="btn btn-success btn-sm">Güncelle</a></td>
                                <td class="text-center"><a href="/Admin/ProductAdminImage/ProductImageDetail/@item.ProductID" class="btn btn-warning btn-sm">Ürün Görselleri</a></td>
                                <td class="text-center"><a href="/Admin/ProductAdminDetail/UpdateProductDetail/@item.ProductID" class="btn btn-info btn-sm">Açıklama ve Bilgi</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="/Admin/ProductAdmin/CreateProduct/" class="btn btn-primary btn-sm">Yeni Ürün Ekle</a>
        </div>
    </div>
</section>

