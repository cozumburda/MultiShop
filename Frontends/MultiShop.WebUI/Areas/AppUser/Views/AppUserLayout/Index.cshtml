@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
@await Component.InvokeAsync("_AppUserLayoutHeadComponentPartial")
<body>
    <div class="container-scroller d-flex">
        @await Component.InvokeAsync("_AppUserLayoutSidebarComponentPartial")
        <div class="container-fluid page-body-wrapper">
            @await Component.InvokeAsync("_AppUserLayoutNavbarComponentPartial")
            <div class="main-panel">
                @RenderBody()
                @await Component.InvokeAsync("_AppUserLayoutFooterComponentPartial")
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("_AppUserLayoutScriptComponentPartial")
</body>
</html>