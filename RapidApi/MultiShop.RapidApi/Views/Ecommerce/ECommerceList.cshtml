@model List<ECommerceViewModel.Product>

@{
    Layout = null;
    string price = "";
    string photo = "";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ECommerceList</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    @* <link href="~/css/datatables.bootstrap4.min.css" rel="stylesheet" /> *@
    <script src="~/js/jquery-3.7.1.js"></script>
</head>
<body>

    <div class="table-responsive text-nowrap m-3">
        <table class="table table-bordered p-2 mb-2" id="ecproductsTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Görsel</th>
                    <th>Ürün Başlığı</th>
                    <th>Ürün Puanı</th>
                    <th>Ürün Fiyatı</th>
                    <th>Ürün Detayları</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var list in Model)
                {
                    price = list.typical_price_range != null ? string.Join(" - ", list.typical_price_range.ToArray()) : "";
                    photo = list.product_photos != null ? list.product_photos[0] : "#";
                    <tr class="text-center">
                        <td><img src="@photo" style="height:60px" class="rounded-2" /></td>
                        <td><span>@list.product_title</span></td>
                        <td>@list.product_rating</td>
                        <td>@price</td>
                        <td><a href="@list.product_page_url" class="btn btn-success btn-sm">Ürün Detayları</a></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <script src="~/js/ecommerceindex.js"></script>
    <!-- ReportTables JS -->
    @* <script src="~/js/jquery.js"></script> *@
    <script src="~/js/bootstrap.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.3/js/dataTables.buttons.min.js" crossorigin="anonymous"></script>
</body>
</html>

